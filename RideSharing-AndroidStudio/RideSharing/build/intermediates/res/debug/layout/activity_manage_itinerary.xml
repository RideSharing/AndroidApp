<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.halley.manageitinerary.ManageItinerary">
    <LinearLayout
        android:id="@+id/switchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_role"/>
        <Switch
            android:defaultValue="true"
            android:id="@+id/switchrole"
            android:textOn="@string/customer"
            android:textOff="@string/driver"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/enabled_view_foo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>






