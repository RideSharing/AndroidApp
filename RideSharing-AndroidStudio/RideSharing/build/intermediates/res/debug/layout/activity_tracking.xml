<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- Framelayout to display Fragments -->


        <fragment
            android:id="@+id/mapTracking"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"/>

    <LinearLayout
        android:id="@+id/trackingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_gravity="center"
        android:orientation="horizontal"
         >

        <Button
            android:id="@+id/btnTracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:layout_margin="5dp"
            android:background="@drawable/flat_selector"
            android:text="@string/start_itinerary"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/sosImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sos"
            android:onClick="sosOnclick"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/media/enclaveit/DATA/RideSharingGIT/AndroidApp/RideSharing-AndroidStudio/RideSharing/res/layout/activity_tracking.xml -->