<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editDriverLicense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:hint="@string/driver_license"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip" >

        <Button
            android:id="@+id/btnChangeDriverLicense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#3DA5E1"
            android:onClick="changepasswordonClick"
            android:text="@string/btn_confirm_change"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancelDriverLicense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#3DA5E1"
            android:onClick="clickCheck"
            android:text="@string/btn_cancel_change"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout><!-- From: file:/media/enclaveit/DATA/Newest%20Android%20App/AndroidApp/RideSharing-AndroidStudio/RideSharing/res/layout/dialog_edit_driver_license.xml -->